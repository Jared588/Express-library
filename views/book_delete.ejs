<h1><%= title %>: <%= book.title %></h1>

<% if (bookinstances.length) { %>
  <p><strong>Delete the following book instances before attempting to delete this book.</strong></p>
  <div style="margin-left:20px;margin-top:20px">
    <h4>Books</h4>
    <dl>
    <% bookinstances.forEach(function(bookinstance) { %>
      <dt>
      <a href="<%= bookinstance.url %>"><%= bookinstance.book.title %></a>
      </dt>
      <dd><%= bookinstance.book.summary %></dd>
    <% }); %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this book?</p>

  <form method="POST">
    <div class="form-group">
      <input id="bookid" class="form-control" type="hidden" name="bookid" value="<%= book._id %>">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>
